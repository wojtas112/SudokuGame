<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.compprog.PrimaryController">
   <children>
      <Label text="%welcomeMessage">
         <font>
            <Font size = "30.0"/>
         </font>
      </Label>
      <Label text="%chooseLanguage"/>
      <HBox alignment="CENTER" spacing="10.0">
         <Button fx:id="buttonPl" text="%languagePl" onAction="#switchToPl"/>
         <Button fx:id="buttonEn" text="%languageEn" onAction="#switchToEn"/>
      </HBox>
      <Label text="%showAuthor"/>
      <Button fx:id="buttonAuthors" text="%authors" onAction="#switchToAuthors" />
      <Label text="%difficultyLevel"/>
      <Button fx:id="easyButton" text="%lvlEasy" onAction="#switchToGridEasy"/>
      <Button fx:id="mediumButton" text="%lvlMedium" onAction="#switchToGridMedium"/>
      <Button fx:id="hardButton" text="%lvlHard" onAction="#switchToGridHard"/>

   </children>
   <padding>
      <Insets bottom="300.0" left="300.0" right="300.0" top="300.0" />
   </padding>
</VBox>
